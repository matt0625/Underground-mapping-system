<Window x:Class="TUBETREKWPFV1.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TUBETREKWPFV1.Views"
        mc:Ignorable="d"
        Title="LoginWindow" Height="650" Width="800" WindowState="Maximized">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- For the Login Title -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- For Username -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- For Password -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- For the Login Button -->
            <RowDefinition Height="*"/>
            <!-- For spacing -->
        </Grid.RowDefinitions>

        <!-- Login Title -->
        <TextBlock Text="TubeTrekker Login" FontSize="42" FontWeight="Bold" Foreground="#2d89ef" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="0,30,0,20"/>
        <!--Logo image -->
        <Image Source="pack://application:,,,/Resources/Images/londonunderground.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Uniform" MaxWidth="400" MaxHeight="200" Margin="41,0,619,0" Grid.Row="0" />

        <!-- Username Label -->
        <TextBlock Text="Username:" FontSize="16" Foreground="DarkSlateGray" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,10,0,0" Grid.Row="1"/>
        <!-- Username Field -->
        <TextBox x:Name="Username" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Width="300" Height="40" Margin="50,10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Padding="10,5"
                 Background="White" Foreground="DarkSlateGray" BorderBrush="#2d89ef" BorderThickness="1" Grid.Row="2"/>

        <!-- Password Label -->
        <TextBlock Text="Password:" FontSize="16" Foreground="DarkSlateGray" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,10,0,0" Grid.Row="3"/>
        <!-- Password Field -->
        <TextBox x:Name="Password" Width="300" Height="40" Margin="50,10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Padding="10,5"
                     Background="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="DarkSlateGray" BorderBrush="#2d89ef" BorderThickness="1" Grid.Row="4"/>

        <!-- Login Button -->
        <Button Name="LoginButton" Content="Login" Width="300" Height="45" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#2d89ef" Foreground="White" 
                FontSize="16" BorderBrush="#2d89ef" BorderThickness="1" Margin="50,10,50,20" Grid.Row="5" Click="LoginButton_Click">
            <Button.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.3"/>
            </Button.Effect>
        </Button>

        <!--Go To SignUp Window Button-->
        <Button Name="SignUpButton" Content="No account? Sign up" Width="200" Height="45" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Foreground="#2d89ef" 
                FontSize="14" BorderBrush="#2d89ef" BorderThickness="1" Grid.Row="6" Click="SignUpButton_Click">
            <Button.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.3"/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
