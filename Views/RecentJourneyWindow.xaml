<Window x:Class="TUBETREKWPFV1.Views.RecentJourneyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TUBETREKWPFV1.Views"
        mc:Ignorable="d"
        Title="RecentJourneyWindow" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <!-- Defining two columns: fixed width for the left panel and remaining space for the map -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <!-- Left panel -->
            <ColumnDefinition Width="*" />
            <!-- Map content -->
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Border Background="White" Grid.Column="0" BorderBrush="#dcdcdc" BorderThickness="1">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <!--Return Button -->
                    <Button Name="ReturnButton" Content="Go back" Width="50" Height="20" HorizontalAlignment="Left" Background="Transparent" Foreground="#2d89ef" 
FontSize="12" BorderBrush="#2d89ef" BorderThickness="1" Click="ReturnButton_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.3"/>
                        </Button.Effect>
                    </Button>
                    
                    <!--Heading labels -->
                    <TextBlock Text="TubeTrekker" FontFamily="Segoe UI" FontSize="14" FontWeight="Bold"
                               Foreground="#2d89ef" HorizontalAlignment="Center" />
                    <TextBlock Text="Recent Journeys" FontFamily="Segoe UI" FontSize="36" FontWeight="Bold"
                               Foreground="#2d89ef" Margin="0,10,0,20" HorizontalAlignment="Center" />
                </StackPanel>
                
                <!-- Sort button (displayed as icon with given source) -->
                <Button Name="SortButton" Grid.Row="1" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center"
                        ToolTip="Sort Journeys" Click="SortButton_Click">
                    <Image Source="pack://application:,,,/Resources/Images/sorticon.png" Stretch="Uniform" />
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.3"/>
                    </Button.Effect>
                </Button>

                <!-- listview specifically bound to userjourneys, see observable collection and object structure in code behind -->
                <ListView Name="ListViewBox" Grid.Row="2" ItemsSource="{Binding UserJourneys}" 
                          BorderThickness="0" HorizontalContentAlignment="Stretch" Padding="5">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="8" BorderBrush="#dcdcdc" 
                                    BorderThickness="1" HorizontalAlignment="Stretch">
                                <Grid>
                                    <!-- extracting start and end properties -->
                                    <StackPanel VerticalAlignment="Top">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontWeight="Bold" FontSize="14" Margin="5, 0, 10, 0"
                                                       Foreground="#2d89ef">
                                                <Run Text="From:" />
                                                <Run Text="{Binding StartStation}" />
                                            </TextBlock>
                                            <TextBlock FontSize="14" Foreground="#2d89ef" FontWeight="Bold">
                                                <Run Text="To:" />
                                                <Run Text="{Binding Destination}" />
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- expander for Journey Details -->
                                        <Expander x:Name="JourneyDisplay" Header="See Journey" IsExpanded="False" Margin="5,5,0,0" Expanded="JourneyDisplay_Expanded"
                                                  >
                                            <ItemsControl ItemsSource="{Binding PathList}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}" FontSize="12" 
                                                                   Foreground="DarkSlateGray" TextWrapping="Wrap" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Expander>

                                        <TextBlock Text="{Binding DateTime, StringFormat='{}{0:dd MMM yyyy HH:mm}'}"
                                                   FontSize="13" Foreground="#757575" Margin="5,2,0,0" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                        
                   
                </ListView>
            </Grid>
        </Border>

        <!-- map content fills rest of page -->
        <wv2:WebView2 x:Name="MapWebView" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </Grid>
</Window>
